			{
				"caption": "DocumentViewer",
				"id": "side-bar-files-open-with-document-viewer",

				"command": "side_bar_files_open_with",
				"args": {
									"paths": [],
									"application": "/usr/bin/evince",
									"extensions":"pdf", //open all even folders
									"args":[]
								},
				"open_automatically" : true // will close the view/tab and launch the application
			},

			//separator
			{"caption":"-"}
